# RBU AI Assistant Environment Variables

# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
PORT=5000

# Chatbot settings
DEFAULT_CONFIDENCE_THRESHOLD=0.15
SEMANTIC_CONFIDENCE_THRESHOLD=0.70
HIGH_CONFIDENCE_THRESHOLD=0.6
SIMILARITY_THRESHOLD=0.70
MAX_SUGGESTIONS=5

# NLP settings
USE_SPELL_CHECK=True
USE_SEMANTIC_SEARCH=True
USE_STOPWORD_REMOVAL=True
USE_LEMMATIZATION=True
USE_STEMMING=True
USE_ENTITY_RECOGNITION=True
USE_QUERY_EXPANSION=True
USE_WORD_EMBEDDINGS=True

# Hybrid search weights
TFIDF_WEIGHT=0.35
SEMANTIC_WEIGHT=0.5

# Model settings
# Using DistilBERT for semantic search
SEMANTIC_MODEL=distilbert-base-nli-stsb-mean-tokens

# TF-IDF settings
# Include unigrams, bigrams, and trigrams
TFIDF_NGRAM_RANGE=1,3
# Min document frequency: ignore terms that appear in less than 2 documents
TFIDF_MIN_DF=1
# Max document frequency: ignore terms that appear in more than 90% of documents
TFIDF_MAX_DF=0.95

